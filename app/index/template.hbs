{{#unless loading}}
<div class="container">
    <label>Select Area</label>
    {{location-selector model=model.locations searchField='name' launch=(action 'launch')}} 
</div>

{{!-- <div class="container">
    <label>Select Property</label>
    {{property-selector model=model.properties searchField='name' navigate=(action 'navigate') launch=(action 'launch')}} 
</div> --}}
{{/unless}}

{{#if loading}}
    {{loading-mask loadingMessage=loadingMessage}}
{{/if}}

{{#unless loading}}
    {{#if showImagePicker}}
        {{image-picker model=model.property.gallery onSave=(action 'onSave') addAnImage=(action 'addAnImage')}}
    {{/if}}
{{/unless}}

{{outlet}}